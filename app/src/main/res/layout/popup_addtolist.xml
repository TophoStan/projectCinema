<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="400dp"
    app:cardCornerRadius="10dp"
    >


    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#A1A1A1"
        >

    <TextView
        android:id="@+id/yourList_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/yourLists_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="45dp"
        android:layout_marginTop="10dp"/>

    <ListView
        android:id="@+id/yourList_list"
        android:layout_width="317dp"
        android:layout_height="228dp"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/yourList_txt" />



    <Button
        android:id="@+id/popup_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/yourList_list"
        android:backgroundTint="#808080"
        android:layout_marginStart="270dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/popup_cancel"
        android:textColor="@color/black"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>